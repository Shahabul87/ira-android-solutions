# SaaS Startup Configuration Template
# Optimized for multi-tenant SaaS applications

# === PROJECT CONFIGURATION ===
PROJECT_NAME=my-saas-app
PROJECT_TYPE=saas
ENVIRONMENT=production
DEBUG=false

# === SECURITY ===
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
JWT_SECRET_KEY=CHANGE_THIS_TO_DIFFERENT_RANDOM_64_CHAR_STRING
ENCRYPTION_KEY=CHANGE_THIS_TO_ANOTHER_RANDOM_64_CHAR_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_MIN_LENGTH=10
ENFORCE_2FA=true

# === DATABASE ===
DATABASE_TYPE=postgresql
DB_HOST=db.example.com
DB_PORT=5432
DB_NAME=saas_production
DB_USER=saas_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DATABASE_URL=postgresql://saas_user:CHANGE_THIS@db.example.com:5432/saas_production

# === REDIS (Caching & Sessions) ===
REDIS_HOST=redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_DB=0
REDIS_URL=redis://:CHANGE_THIS@redis.example.com:6379/0

# === MULTI-TENANCY ===
ENABLE_MULTI_TENANCY=true
TENANT_ISOLATION_MODE=schema  # schema | database | hybrid
MAX_TENANTS_PER_INSTANCE=1000
TENANT_SUBDOMAIN_ENABLED=true

# === AUTHENTICATION ===
AUTH_METHODS=email,oauth,magic,biometric
OAUTH_ENABLED=true
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
MAGIC_LINK_EXPIRY_MINUTES=15
PASSKEY_ENABLED=true

# === CORS ===
FRONTEND_URL=https://app.yoursaas.com
BACKEND_URL=https://api.yoursaas.com
ALLOWED_ORIGINS=https://app.yoursaas.com,https://www.yoursaas.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
ALLOWED_HEADERS=*

# === EMAIL SERVICE ===
EMAIL_ENABLED=true
EMAIL_PROVIDER=sendgrid  # sendgrid | ses | mailgun | smtp
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yoursaas.com
EMAIL_FROM_NAME=YourSaaS
EMAIL_VERIFY_REQUIRED=true

# === BILLING & PAYMENTS ===
PAYMENT_ENABLED=true
PAYMENT_PROVIDER=stripe  # stripe | paddle | lemonsqueezy
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
BILLING_PORTAL_ENABLED=true
FREE_TRIAL_DAYS=14

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BY_API_KEY=true
PUBLIC_API_RATE_LIMIT=10

# === MONITORING & OBSERVABILITY ===
MONITORING_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
LOG_LEVEL=INFO
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# === ANALYTICS ===
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=mixpanel  # mixpanel | amplitude | segment
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
TRACK_USER_SESSIONS=true

# === FEATURES FLAGS ===
FEATURE_FLAG_PROVIDER=launchdarkly  # launchdarkly | unleash | custom
LAUNCHDARKLY_SDK_KEY=your-launchdarkly-sdk-key
ENABLE_BETA_FEATURES=false
ENABLE_A_B_TESTING=true

# === CDN & STORAGE ===
CDN_ENABLED=true
CDN_URL=https://cdn.yoursaas.com
STORAGE_PROVIDER=s3  # s3 | gcs | azure
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=yoursaas-assets
AWS_REGION=us-east-1

# === WEBHOOKS ===
WEBHOOK_ENABLED=true
WEBHOOK_SIGNING_SECRET=your-webhook-signing-secret
WEBHOOK_RETRY_COUNT=3
WEBHOOK_TIMEOUT_SECONDS=30

# === COMPLIANCE ===
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=365
PII_ENCRYPTION_ENABLED=true
AUDIT_COMPLIANCE_MODE=true

# === PERFORMANCE ===
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
DATABASE_QUERY_CACHE=true
API_RESPONSE_CACHE=true
STATIC_FILE_CACHE_DAYS=365

# === SCALING ===
AUTO_SCALE_ENABLED=true
MIN_WORKERS=2
MAX_WORKERS=10
WORKER_CONNECTIONS=1000
ENABLE_CLUSTERING=true